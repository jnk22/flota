root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.{yaml,yml,toml,sh}]
indent_size = 2

[tests/flota_tokenizer_{generated,original}_test/**]
charset = unset
indent_style = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
